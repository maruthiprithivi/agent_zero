{
  "environment": "production",
  "description": "Production environment configuration for Agent Zero",
  "deployment_mode": "enterprise",
  "debug": false,
  "server": {
    "host": "0.0.0.0",
    "port": 8505,
    "transport": "sse",
    "reload": false,
    "log_level": "WARNING",
    "workers": 4,
    "worker_class": "uvicorn.workers.UvicornWorker",
    "max_requests": 10000,
    "max_requests_jitter": 1000,
    "preload_app": true,
    "keepalive": 2
  },
  "clickhouse": {
    "host": "${AGENT_ZERO_CLICKHOUSE_HOST}",
    "port": "${AGENT_ZERO_CLICKHOUSE_PORT:-8443}",
    "user": "${AGENT_ZERO_CLICKHOUSE_USER}",
    "password": "${AGENT_ZERO_CLICKHOUSE_PASSWORD}",
    "database": "${AGENT_ZERO_CLICKHOUSE_DATABASE:-production}",
    "secure": true,
    "verify": true,
    "connect_timeout": 30,
    "send_receive_timeout": 600,
    "pool_size": 20,
    "max_overflow": 50,
    "enable_client_cache": true,
    "cache_ttl": 1800,
    "ssl_cert_path": "${AGENT_ZERO_CLICKHOUSE_SSL_CERT}",
    "ssl_key_path": "${AGENT_ZERO_CLICKHOUSE_SSL_KEY}",
    "ca_cert_path": "${AGENT_ZERO_CLICKHOUSE_CA_CERT}",
    "compression": "lz4",
    "query_timeout": 300,
    "insert_timeout": 120
  },
  "security": {
    "ssl_enable": true,
    "ssl_certfile": "${AGENT_ZERO_SSL_CERT_FILE}",
    "ssl_keyfile": "${AGENT_ZERO_SSL_KEY_FILE}",
    "ssl_ca_certs": "${AGENT_ZERO_SSL_CA_CERTS}",
    "auth_required": true,
    "auth_username": "${AGENT_ZERO_AUTH_USERNAME}",
    "auth_password": "${AGENT_ZERO_AUTH_PASSWORD}",
    "oauth_enable": true,
    "oauth_client_id": "${AGENT_ZERO_OAUTH_CLIENT_ID}",
    "oauth_client_secret": "${AGENT_ZERO_OAUTH_CLIENT_SECRET}",
    "oauth_provider": "${AGENT_ZERO_OAUTH_PROVIDER:-google}",
    "rate_limit_enabled": true,
    "cors_enabled": true,
    "cors_origins": [
      "https://app.example.com",
      "https://admin.example.com",
      "https://api.example.com"
    ],
    "security_headers": true,
    "hsts_max_age": 63072000,
    "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-inline'",
    "x_frame_options": "DENY",
    "x_content_type_options": "nosniff",
    "referrer_policy": "strict-origin-when-cross-origin",
    "zero_trust_enabled": true,
    "mutual_tls_required": true,
    "ip_whitelist": ["${AGENT_ZERO_ALLOWED_IPS}"],
    "enable_audit_logging": true
  },
  "features": {
    "enable_metrics": true,
    "enable_health_check": true,
    "enable_profiling": false,
    "enable_debug_endpoints": false,
    "enable_mock_data": false,
    "enable_hot_reload": false,
    "real_time_analytics": true,
    "enable_structured_output": true,
    "enable_query_caching": true,
    "enable_performance_monitoring": true,
    "enable_predictive_scaling": true,
    "enable_data_compression": true,
    "enable_query_optimization": true
  },
  "limits": {
    "tool_limit": 100,
    "resource_limit": 50,
    "max_query_rows": 10000,
    "max_execution_seconds": 300,
    "max_file_size_mb": 100,
    "max_concurrent_requests": 200,
    "rate_limit_requests": 100,
    "rate_limit_window": 3600,
    "memory_limit_mb": 8192,
    "cpu_limit_cores": 4,
    "disk_space_limit_gb": 100,
    "network_bandwidth_mbps": 1000
  },
  "logging": {
    "level": "WARNING",
    "format": "json",
    "enable_file_logging": true,
    "log_file": "/var/log/agent-zero/production.log",
    "max_file_size_mb": 1000,
    "backup_count": 30,
    "enable_performance_logging": true,
    "enable_request_logging": true,
    "enable_sql_logging": false,
    "log_rotation": "hourly",
    "enable_centralized_logging": true,
    "syslog_endpoint": "${AGENT_ZERO_SYSLOG_ENDPOINT}",
    "enable_log_encryption": true,
    "log_retention_days": 90,
    "sensitive_data_masking": true
  },
  "monitoring": {
    "enable_opentelemetry": true,
    "enable_prometheus": true,
    "prometheus_port": 9090,
    "jaeger_endpoint": "${AGENT_ZERO_JAEGER_ENDPOINT}",
    "enable_health_checks": true,
    "health_check_interval": 30,
    "enable_alerts": true,
    "alert_webhook": "${AGENT_ZERO_ALERT_WEBHOOK}",
    "metrics_retention_days": 365,
    "enable_distributed_tracing": true,
    "enable_custom_metrics": true,
    "enable_sla_monitoring": true,
    "sla_target_uptime": 99.9,
    "enable_anomaly_detection": true
  },
  "testing": {
    "enable_test_mode": false,
    "mock_clickhouse": false,
    "test_database": null,
    "cleanup_on_exit": false,
    "enable_coverage": false
  },
  "ide_integrations": {
    "claude_code": {
      "transport": "sse",
      "enable_progress_notifications": true,
      "enable_tool_annotations": true,
      "connection_timeout": 60,
      "max_concurrent_connections": 100
    },
    "cursor": {
      "transport": "sse",
      "agent_mode": true,
      "websocket_fallback": true,
      "rate_limit": 50,
      "connection_pool_size": 10
    },
    "windsurf": {
      "plugins_enabled": true,
      "multi_panel_support": true,
      "connection_pool_size": 20,
      "enable_load_balancing": true
    }
  },
  "backup": {
    "enable_config_backup": true,
    "backup_interval_hours": 6,
    "backup_retention_days": 30,
    "backup_location": "${AGENT_ZERO_BACKUP_LOCATION}",
    "enable_incremental_backup": true,
    "backup_encryption": true,
    "backup_compression": true,
    "enable_cross_region_backup": true,
    "backup_verification": true
  },
  "disaster_recovery": {
    "enable_dr": true,
    "dr_region": "${AGENT_ZERO_DR_REGION}",
    "rpo_minutes": 15,
    "rto_minutes": 60,
    "enable_automated_failover": true,
    "failover_threshold_errors": 10,
    "enable_data_replication": true
  },
  "compliance": {
    "enable_soc2_compliance": true,
    "enable_gdpr_compliance": true,
    "enable_hipaa_compliance": false,
    "data_retention_days": 2555,
    "enable_data_encryption_at_rest": true,
    "enable_data_encryption_in_transit": true,
    "enable_access_logging": true,
    "enable_change_tracking": true,
    "require_data_classification": true
  },
  "performance": {
    "enable_auto_scaling": true,
    "min_instances": 2,
    "max_instances": 10,
    "cpu_scale_threshold": 70,
    "memory_scale_threshold": 80,
    "scale_up_cooldown": 300,
    "scale_down_cooldown": 600,
    "enable_connection_pooling": true,
    "enable_query_parallelization": true,
    "enable_result_caching": true,
    "cache_eviction_policy": "lru"
  },
  "validation": {
    "required_env_vars": [
      "AGENT_ZERO_CLICKHOUSE_HOST",
      "AGENT_ZERO_CLICKHOUSE_USER",
      "AGENT_ZERO_CLICKHOUSE_PASSWORD",
      "AGENT_ZERO_SSL_CERT_FILE",
      "AGENT_ZERO_SSL_KEY_FILE",
      "AGENT_ZERO_SSL_CA_CERTS",
      "AGENT_ZERO_AUTH_USERNAME",
      "AGENT_ZERO_AUTH_PASSWORD",
      "AGENT_ZERO_OAUTH_CLIENT_ID",
      "AGENT_ZERO_OAUTH_CLIENT_SECRET",
      "AGENT_ZERO_BACKUP_LOCATION",
      "AGENT_ZERO_DR_REGION"
    ],
    "optional_env_vars": [
      "AGENT_ZERO_CLICKHOUSE_DATABASE",
      "AGENT_ZERO_JAEGER_ENDPOINT",
      "AGENT_ZERO_ALERT_WEBHOOK",
      "AGENT_ZERO_SYSLOG_ENDPOINT",
      "AGENT_ZERO_OAUTH_PROVIDER",
      "AGENT_ZERO_ALLOWED_IPS"
    ],
    "config_schema_version": "2.1.0",
    "minimum_memory_mb": 4096,
    "minimum_disk_space_gb": 50,
    "minimum_cpu_cores": 2,
    "required_network_bandwidth_mbps": 100
  }
}
